<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".GroupActivity">

    <TextView
        android:id="@+id/group_head_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="Best Friends Group"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/group_cardview"
        app:layout_constraintTop_toBottomOf="@+id/group_head_txt">



        <ImageView
            android:id="@+id/fr_group_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fr_group_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ariel"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans_bold"
            app:layout_constraintEnd_toEndOf="@+id/fr_group_1"
            app:layout_constraintStart_toStartOf="@+id/fr_group_1"
            app:layout_constraintTop_toBottomOf="@+id/fr_group_1" />

        <ImageView
            android:id="@+id/ariel_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:src="@drawable/f_rank_img"
            app:layout_constraintEnd_toEndOf="@+id/fr_group_1"
            app:layout_constraintStart_toStartOf="@+id/fr_group_1"
            app:layout_constraintTop_toTopOf="@+id/fr_group_1" />

        <TextView
            android:id="@+id/textView46"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#1"
            android:textColor="#1A3323"
            android:textSize="19sp"
            app:layout_constraintBottom_toBottomOf="@+id/ariel_rank"
            app:layout_constraintEnd_toEndOf="@+id/ariel_rank"
            app:layout_constraintStart_toStartOf="@+id/ariel_rank"
            app:layout_constraintTop_toTopOf="@+id/ariel_rank" />

        <ImageView
            android:id="@+id/fr_group_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="250dp"
            android:src="@drawable/fr_group_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fr_group_1" />

        <TextView
            android:id="@+id/sarah_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_bold"
            android:text="Sarah"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="@+id/fr_group_2"
            app:layout_constraintStart_toStartOf="@+id/fr_group_2"
            app:layout_constraintTop_toBottomOf="@+id/fr_group_2" />

        <ImageView
            android:id="@+id/sarah_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/f_rank_img"
            android:layout_marginRight="75dp"
            app:layout_constraintEnd_toEndOf="@+id/fr_group_2"
            app:layout_constraintTop_toTopOf="@+id/fr_group_2" />

        <TextView
            android:id="@+id/sarah_rank_no."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#2"
            android:textColor="#1A3323"
            android:textSize="19sp"
            app:layout_constraintBottom_toBottomOf="@+id/sarah_rank"
            app:layout_constraintEnd_toEndOf="@+id/sarah_rank"
            app:layout_constraintStart_toStartOf="@+id/sarah_rank"
            app:layout_constraintTop_toTopOf="@+id/sarah_rank" />

        <ImageView
            android:id="@+id/fr_group_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:src="@drawable/fr_group_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fr_group_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_bold"
            android:text="Tim"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="@+id/fr_group_3"
            app:layout_constraintStart_toStartOf="@+id/fr_group_3"
            app:layout_constraintTop_toBottomOf="@+id/fr_group_3" />

        <ImageView
            android:id="@+id/tim_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/f_rank_img"
            android:layout_marginRight="60dp"
            app:layout_constraintEnd_toEndOf="@+id/fr_group_3"
            app:layout_constraintTop_toTopOf="@+id/fr_group_3" />

        <TextView
            android:id="@+id/tim_rank_no."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#3"
            android:textColor="#1A3323"
            android:textSize="19sp"
            app:layout_constraintBottom_toBottomOf="@+id/tim_rank"
            app:layout_constraintEnd_toEndOf="@+id/tim_rank"
            app:layout_constraintStart_toStartOf="@+id/tim_rank"
            app:layout_constraintTop_toTopOf="@+id/tim_rank" />




    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/group_cardview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="40dp"
        android:layout_marginTop="199dp"
        app:layout_constraintBottom_toTopOf="@+id/frnd_grp_scrl_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group_head_txt">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/word1"
                android:layout_width="83dp"
                android:layout_height="27dp"
                android:layout_marginStart="47dp"
                android:layout_marginEnd="300dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/light_blue_shape"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center"
                android:text="This week"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/word2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center"
                android:text="Last week"
                android:textColor="@color/grey_stroke_outline"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/word3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center"
                android:text="This month"
                android:textColor="@color/grey_stroke_outline"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



    <ScrollView
        android:id="@+id/frnd_grp_scrl_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="440dp"
        app:layout_constraintTop_toBottomOf="@+id/group_head_txt">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_friend_grp_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/rv_frnd_grp_item" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="2dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/friend_grp_shape"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_friend_grp_item">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <TextView
                        android:id="@+id/memmber_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="29dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="Members"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="29dp"
                        android:layout_marginRight="14dp"
                        android:backgroundTint="@color/light_sky"
                        android:text="+ Add friend"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="25dp"
                        tools:listitem="@layout/rv_member_item"
                        app:layout_constraintTop_toBottomOf="@+id/memmber_txt" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See more"
                        android:textColor="@color/forest_green_color"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rv_group" />



                </androidx.constraintlayout.widget.ConstraintLayout>




            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>