<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="380dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="400dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

       <androidx.constraintlayout.widget.Constraints
           android:layout_width="match_parent"
           android:layout_height="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This week"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans_bold"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textSize="30sp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/down_arrow"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="170dp"/>

     <ImageView
         android:layout_width="100dp"
         android:layout_height="100dp"
         android:layout_marginTop="120dp"
         android:layout_marginLeft="17dp"
         android:src="@drawable/week_ecli2"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="21dp"
            android:src="@drawable/week_outer"
            android:layout_marginTop="120dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300"
            android:fontFamily="@font/open_sans_bold"
            android:textSize="23sp"
            android:layout_marginLeft="45dp"
            android:textColor="@color/forest_green_color"
            android:layout_marginTop="150dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total\n Points"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="225dp"
            android:layout_marginLeft="40dp"
            android:textSize="23sp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="140dp"
            android:src="@drawable/week_ecli2"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="143dp"
            android:src="@drawable/week_outer"
            android:layout_marginTop="120dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:fontFamily="@font/open_sans_bold"
            android:textSize="23sp"
            android:layout_marginLeft="175dp"
            android:textColor="@color/forest_green_color"
            android:layout_marginTop="150dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day\n streak"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="225dp"
            android:layout_marginLeft="160dp"
            android:textSize="23sp"/>



        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="260dp"
            android:src="@drawable/week_ecli2"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="263dp"
            android:src="@drawable/week_outer"
            android:layout_marginTop="120dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:fontFamily="@font/open_sans_bold"
            android:textSize="23sp"
            android:layout_marginLeft="295dp"
            android:textColor="@color/forest_green_color"
            android:layout_marginTop="150dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Games\n played"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="225dp"
            android:layout_marginLeft="280dp"
            android:textSize="23sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit goals"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="140dp"
            android:backgroundTint="@color/light_sky"
            android:gravity="center"/>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="380dp"
        android:layout_height="300dp"
        android:background="@drawable/reward_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        


        
    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>