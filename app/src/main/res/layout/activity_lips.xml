<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LipsActivity">

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/open_sans_bold"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="4sp"
        android:text="Great!"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:transformPivotY="-2.25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="257dp"
        android:layout_height="23sp"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/sofia_pro_soft_med"
        android:gravity="center_horizontal"
        android:text="This is what we found out"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView19"
        app:layout_constraintStart_toStartOf="@+id/textView19"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <Button
        android:id="@+id/lisps_cont_btn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="45dp"
        android:backgroundTint="@color/green_txt_color"
        android:text="Continue"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/lisp_img"
        android:layout_width="186dp"
        android:layout_height="124.46dp"
        android:layout_marginTop="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20"
        app:srcCompat="@drawable/lips" />

    <ImageView
        android:id="@+id/lispUpUpBackArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="358dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arroww" />

    <ImageView
        android:id="@+id/lispNextArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/lisp_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lisp_img"
        app:layout_constraintTop_toTopOf="@+id/lisp_img"
        app:srcCompat="@drawable/arrownext" />

    <TextView
        android:id="@+id/lisp_txt"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/sofiapro_soft_bold"
        android:text="Lisps"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/lisp_img"
        app:layout_constraintStart_toStartOf="@+id/lisp_img"
        app:layout_constraintTop_toBottomOf="@+id/lisp_img" />

    <TextView
        android:id="@+id/lisp_desc_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/S_sound_long_desc_txt"
        android:fontFamily="@font/open_sans_semibold"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="@+id/lisp_txt"
        app:layout_constraintStart_toStartOf="@+id/lisp_txt"
        app:layout_constraintTop_toBottomOf="@+id/lisp_txt" />

</androidx.constraintlayout.widget.ConstraintLayout>