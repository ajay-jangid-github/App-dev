<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">




        <androidx.cardview.widget.CardView
            android:id="@+id/cardView7"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            app:cardCornerRadius="42dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/sarh_img"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/fr_group_2"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/sarh_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sarah"
                    android:fontFamily="@font/open_sans_semibold"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="30dp"
                    android:textColor="@color/black"
                    android:textSize="27sp"
                    app:layout_constraintBottom_toBottomOf="@+id/sarh_img"
                    app:layout_constraintStart_toEndOf="@+id/sarh_img"
                    app:layout_constraintTop_toTopOf="@+id/sarh_img" />

                <TextView
                    android:id="@+id/sarah_active_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active"
                    android:layout_marginTop="5dp"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/open_sans_semibold"
                    android:layout_marginRight="20dp"
                    app:layout_constraintEnd_toEndOf="@+id/sarh_txt"
                    app:layout_constraintStart_toStartOf="@+id/sarh_txt"
                    app:layout_constraintTop_toBottomOf="@+id/sarh_txt" />

    </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>