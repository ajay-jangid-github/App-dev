<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.SelCatFragment">





    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/open_sans_bold"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="4sp"
        android:text="Hi there!"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:translationY="-2.25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginTop="171dp"
        android:fontFamily="@font/sofia_pro_soft_med"
        android:gravity="center_horizontal"
        android:text="Are you adult?"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp"
        android:text="you must be 12 or older to \n start your account"
        android:fontFamily="@font/sofia_pro_soft_med"
        android:gravity="center_horizontal|top"
        android:textColor="@color/grey_txt_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/adltImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:srcCompat="@drawable/adultimage" />

    <ImageView
        android:id="@+id/childImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="109dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:srcCompat="@drawable/childimage" />

    <TextView
        android:id="@+id/adultImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adult"
        app:layout_constraintEnd_toEndOf="@+id/adltImg"
        app:layout_constraintStart_toStartOf="@+id/adltImg"
        app:layout_constraintTop_toBottomOf="@+id/adltImg" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Child"
        app:layout_constraintEnd_toEndOf="@+id/childImg"
        app:layout_constraintStart_toStartOf="@+id/childImg"
        app:layout_constraintTop_toBottomOf="@+id/childImg" />




</androidx.constraintlayout.widget.ConstraintLayout>
