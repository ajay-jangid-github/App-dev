<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ConfirmFragment">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/open_sans_bold"
        android:foregroundGravity="center_horizontal"
        android:gravity="center"
        android:lineSpacingExtra="4sp"
        android:text="Hi there!"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:translationY="-2.25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/sofia_pro_soft_med"
        android:gravity="center_horizontal"
        android:text="Have you been \n diagnosed with a speech \n impediment in the past?"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView13"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />



    <ImageView
        android:id="@+id/yes_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        app:srcCompat="@drawable/rightimg" />

    <ImageView
        android:id="@+id/no_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/sofia_pro_soft_med"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/yes_img"
        app:layout_constraintTop_toTopOf="@+id/yes_img"
        app:srcCompat="@drawable/noimg" />



    <TextView
        android:id="@+id/yes_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Yes"
        android:fontFamily="@font/sofia_pro_soft_med"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/yes_img"
        app:layout_constraintStart_toStartOf="@+id/yes_img"
        app:layout_constraintTop_toBottomOf="@+id/yes_img" />

    <TextView
        android:id="@+id/no_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="No"
        android:textColor="@color/black"
        android:fontFamily="@font/sofia_pro_soft_med"
        app:layout_constraintEnd_toEndOf="@+id/no_img"
        app:layout_constraintStart_toStartOf="@+id/no_img"
        app:layout_constraintTop_toBottomOf="@+id/no_img" />

</androidx.constraintlayout.widget.ConstraintLayout>